{
  "name": "watchparty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "backend:install": "cd backend && npm install",
    "backend:dev": "cd backend && npm run dev",
